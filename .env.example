# Required: profile JSON path (defaults to .data/profiles.json)
PROFILE_PATH=

# Optional: data directory (defaults to .data)
DATA_PATH=.data

# Schedule (runs in Asia/Shanghai timezone)
CRON_SCHEDULE=0 2 * * *

# Logging
LOG_LEVEL=info
LOG_SUMMARY_PATH=.data/logs/summary.log
LOG_DETAIL_PATH=.data/logs/detail.log

# Discord bot (for notifications + slash command)
DISCORD_BOT_TOKEN=
DISCORD_APP_ID=
DISCORD_GUILD_ID=
DISCORD_CHANNEL_ID=

# Optional webhook (notifications only, preferred if set)
DISCORD_WEBHOOK_URL=

# Optional: override timezone
TZ=Asia/Shanghai
