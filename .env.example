# Required: profile JSON path (defaults to .data/profiles.json)
PROFILE_PATH=

# Optional: data directory (defaults to .data)
DATA_PATH=.data

# Schedule (runs in Asia/Shanghai timezone)
CRON_SCHEDULE=0 2 * * *

# Discord bot (for notifications + slash command)
DISCORD_BOT_TOKEN=
DISCORD_APP_ID=
DISCORD_GUILD_ID=
DISCORD_CHANNEL_ID=

# Optional webhook fallback (notifications only)
DISCORD_WEBHOOK_URL=

# Optional: override timezone
TZ=Asia/Shanghai
